{
  "workbench.colorCustomizations": {
    "activityBar.background": "#ffd133",
    "activityBar.activeBorder": "#009f7b",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#009f7b",
    "activityBarBadge.foreground": "#e7e7e7",
    "titleBar.activeBackground": "#ffc600",
    "titleBar.inactiveBackground": "#ffc60099",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveForeground": "#15202b99",
    "statusBar.background": "#ffc600",
    "statusBarItem.hoverBackground": "#cc9e00",
    "statusBar.foreground": "#15202b"
  },
  "prettier.jsxBracketSameLine": true,
  "prettier.jsxSingleQuote": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "vscode.configuration-editing",
  "peacock.color": "#FFC600",
  // --------------------Prettier / formatter ---------------------------
  // for wes bos eslint config check here: https://www.youtube.com/watch?v=lHAeK8t94as
  // turn this off for javascript - will handle with Eslint
  "[javascript]": {
    "editor.formatOnSave": false
  },
  // tell the Eslint plugin to run on save
  "eslint.autoFixOnSave": true,
  // Turn the prettier extension off for javascript if enabled for things like CSS and HTML
  "prettier.disableLanguages": [
    "js"
  ],

}
